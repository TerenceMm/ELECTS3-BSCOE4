<head>
<title>Module 03 - MP02</title>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<style>
.box{
    width: 200px;
    height: 200px;
    background: #e75a08;
    margin-top: 30px;
    border-style: solid;
    border-color:rgb(239, 243, 6);
    position: relative;
}
</style>

<script>
$(document).ready(function(){
    $("button").click(function(){
        $(".box").animate({
            top: "+=70px",
            left: "+=90px",
            width: "+=110px",
            height: "+=120px"
            
        });
      
        });
    });


</script>

</head>

<body>
  <button type="button">Animate</button>
  <div class="box"></div>
</body>

